block content
    h2 Employee Managment System
    link(rel='stylesheet'
    href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    table(border='2')
        tr
            th Id
            th Name
            th Department
            th Salary
            th(colspan='2') Action
            each data, i in empData
                tr
                    td=data.empId
                    td=data.empName
                    td=data.empDept
                    td=data.empSalary
                    td
                        a(href="/searchemp" + data._id) Update
                    td
                        a(href="/deleteemp/" + data._id) Delete

    h1 #{title}

    a(href='/add') AddEmployee